# Security headers for production deployment
/*
  # Prevent clickjacking
  X-Frame-Options: DENY
  
  # Prevent MIME type sniffing
  X-Content-Type-Options: nosniff
  
  # Enable XSS protection
  X-XSS-Protection: 1; mode=block
  
  # Control referrer information
  Referrer-Policy: strict-origin-when-cross-origin
  
  # Restrict permissions
  Permissions-Policy: camera=(), microphone=(), geolocation=(), payment=()
  
  # Content Security Policy (adjust domains as needed for your app)
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://abobvpamaiwrgwtghoyh.supabase.co; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self' https://abobvpamaiwrgwtghoyh.supabase.co wss://abobvpamaiwrgwtghoyh.supabase.co; object-src 'none'; base-uri 'self'; form-action 'self';
  
  # HSTS (uncomment for HTTPS sites)
  # Strict-Transport-Security: max-age=31536000; includeSubDomains; preload